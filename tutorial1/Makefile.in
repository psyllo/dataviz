package = @PACKAGE_NAME@1
CXX = @CXX@
CPPFLAGS = @CPPFLAGS@
CXXFLAGS = @CXXFLAGS@
LIBS = @LIBS@
DEFS = @DEFS@

# Using pkg-config is not a portable way to make this gcc command. Use LIBS?

$(package): main.cpp
	$(CXX) $(CPPFLAGS) $(DEFS) $(CXXFLAGS) -o $@ main.cpp `pkg-config --cflags glfw3` `pkg-config --static --libs glfw3`

clean: FORCE
	-rm $(package) &> /dev/null
	-rm *.o &> /dev/null

all: $(package)

# Regenerate the Makefile if Makefile.in has changed
Makefile: Makefile.in ../config.status
	../config.status $@

../config.status: ../configure
	cd .. && config.status --recheck

FORCE:
